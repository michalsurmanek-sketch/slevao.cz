        until: addDays(9),
        link: '#',
        image: null
      }
    ];

    function addDays(d){ const dt = new Date(); dt.setDate(dt.getDate()+d); return dt; }

    // Kategorie z dat
    const categories = [...new Set(offers.map(o => o.category))];
    const categoryChips = document.getElementById('categoryChips');
    const selected = new Set();

    categories.forEach(cat => {
      const chip = document.createElement('button');
      chip.type = 'button';
      chip.className = 'chip inline-flex items-center gap-2 px-3 py-1.5 rounded-full border border-slate-300 bg-white text-sm';
      chip.textContent = cat;
      chip.dataset.category = cat;
      chip.addEventListener('click', () => {
        if (selected.has(cat)) {
          selected.delete(cat); chip.classList.remove('ring-2','ring-brand','border-brand');
        } else {
          selected.add(cat); chip.classList.add('ring-2','ring-brand','border-brand');
        }
        render();
      });
      categoryChips.appendChild(chip);
    });

    // Vyhled√°v√°n√≠ & t≈ô√≠dƒõn√≠
    const searchInput = document.getElementById('search');
    const sortSelect = document.getElementById('sort');
    searchInput.addEventListener('input', () => render());
    sortSelect.addEventListener('change', () => render());

    // Grid rendering + lazy paging
    const grid = document.getElementById('offersGrid');
    const loadMoreBtn = document.getElementById('loadMore');
    let page = 1; const pageSize = 6;

    function timeLeftStr(date){
      const ms = new Date(date) - new Date();
      if (ms <= 0) return 'vypr≈°elo';
      const d = Math.floor(ms/86400000);
      const h = Math.floor((ms%86400000)/3600000);
      return d>0 ? `${d} d ${h} h` : `${h} h`;
    }

    function applyFilters(data){
      const q = searchInput.value.trim().toLowerCase();
      let list = data.filter(o => (!selected.size || selected.has(o.category)));
      if (q) list = list.filter(o => (o.title+o.desc+o.category).toLowerCase().includes(q));
      switch (sortSelect.value){
        case 'discount': list.sort((a,b)=>b.discount-a.discount); break;
        case 'new': list.sort((a,b)=>b.until - a.until); break; // demo: "nov√©" ~ del≈°√≠ platnost
        case 'ending': list.sort((a,b)=>a.until - b.until); break;
        default: /* pop */ list.sort((a,b)=>b.discount - a.discount);
      }
      return list;
    }

    function offerCard(o){
      const daysLeft = timeLeftStr(o.until);
      return `
        <article class="group rounded-2xl border border-slate-200 bg-white shadow-soft overflow-hidden" data-category="${o.category}" data-discount="${o.discount}" data-until="${o.until.toISOString()}">
          <div class="aspect-[16/9] bg-gradient-to-tr from-brand/10 to-accent/20 relative">
            <div class="absolute top-3 left-3 inline-flex items-center gap-1 px-2 py-1 rounded-full bg-brand text-white text-xs font-semibold">-${o.discount}%</div>
            <div class="absolute top-3 right-3 inline-flex items-center gap-1 px-2 py-1 rounded-full bg-black/80 text-white text-xs" title="Zb√Ωv√° ƒçasu">${daysLeft}</div>
            <div class="absolute inset-0 grid place-items-center text-center px-6">
              <div class="font-display font-extrabold text-lg">${o.title}</div>
              <div class="text-xs text-slate-600">${o.category}</div>
            </div>
          </div>
          <div class="p-4">
            <h3 class="font-semibold line-clamp-2">${o.title}</h3>
            <p class="text-sm text-slate-600 mt-1 line-clamp-3">${o.desc}</p>
            <div class="mt-3 flex items-center justify-between">
              <div class="text-xs text-slate-500">Konƒç√≠ za <span class="font-medium">${daysLeft}</span></div>
              <a href="${o.link}" class="inline-flex items-center gap-2 rounded-xl px-3 py-2 bg-slate-900 text-white text-sm font-semibold hover:bg-slate-800">
                <i data-lucide="link" class="w-4 h-4"></i>
                Detail
              </a>
            </div>
          </div>
        </article>
      `;
    }

    function render(){
      const filtered = applyFilters(offers);
      const cap = page * pageSize;
      const visible = filtered.slice(0, cap);
      grid.innerHTML = visible.map(offerCard).join('');
      lucide.createIcons();
      loadMoreBtn.classList.toggle('hidden', visible.length >= filtered.length);
    }

    loadMoreBtn.addEventListener('click', () => { page++; render(); });

    // Hero odpoƒçet
    function updateHeroTimer(){
      const ms = addDays(2) - new Date();
      const el = document.getElementById('heroTimer');
      if (!el) return;
      if (ms <= 0) { el.textContent = 'vypr≈°elo'; return; }
      const d = Math.floor(ms/86400000);
      const h = Math.floor((ms%86400000)/3600000);
      const m = Math.floor((ms%3600000)/60000);
      el.textContent = (d>0?`${d} d `:'') + `${h} h ${m} min`;
    }
    setInterval(updateHeroTimer, 1000*30); // ka≈æd√Ωch 30 s
    updateHeroTimer();

    // Init
    render();
  </script>
</body>
</html>
