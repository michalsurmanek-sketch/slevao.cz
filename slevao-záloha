      document.getElementById('year').textContent = new Date().getFullYear();
    });

    // ====== Mobiln√≠ menu (auto-close po kliknut√≠) ======
    const hamburger = document.getElementById('hamburger');
    const mobileMenu = document.getElementById('mobile-menu');
    const toggleMenu = () => {
      const isOpen = !mobileMenu.classList.contains('hidden');
      if (isOpen) {
        mobileMenu.classList.add('hidden');
        hamburger.setAttribute('aria-expanded', 'false');
      } else {
        mobileMenu.classList.remove('hidden');
        hamburger.setAttribute('aria-expanded', 'true');
      }
    };
    hamburger.addEventListener('click', toggleMenu);
    mobileMenu.querySelectorAll('[data-close-menu]').forEach(a => a.addEventListener('click', () => {
      mobileMenu.classList.add('hidden');
      hamburger.setAttribute('aria-expanded', 'false');
    }));

    // ====== Demo data nab√≠dek ======
    const offers = [
      {
        id: 'reklamas-50',
        title: 'Reklamas.cz ‚Äì mobiln√≠ reklama',
        desc: 'Podzimn√≠ bal√≠ƒçek na eventy ve Zl√≠nsk√©m kraji. Vyzkou≈°ej Reklamas hrdinu v ter√©nu.',
        category: 'Reklamas',
        discount: 50,
        until: addDays(10),
        link: '#',
        image: null
      },
      {
        id: 'startao-30',
        title: 'StartAO.cz ‚Äì logo + miniweb',
        desc: 'Startovn√≠ bal√≠ƒçek pro zaƒç√≠naj√≠c√≠ projekty. Logo, dom√©na, jednostr√°nkov√Ω web.',
